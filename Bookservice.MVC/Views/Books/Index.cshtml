@using Bookservice.Lib.DTO
@model List<BookBasic>

<h1>Boeken</h1>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            @foreach (BookBasic bookbasic in Model) {
                <li class="list-group-item @(bookbasic.Title.Contains("C#") 
                    || bookbasic.Title.Contains(".Net") ? "list-group-item-success" : "")">
                    <a asp-controller="Books" asp-action="Detail" asp-route-id="@bookbasic.Id">@bookbasic.Title</a>
                    <i>(@bookbasic.Id)</i>
                </li>
            }
        </ul>
    </div>
</div>